{
    "version": 2,
    "builds": [
      {
        "src": "./backend/server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["backend/**"]
        }
      },
      {
        "src": "./frontend/build/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/build/$1"
      }
    ],
    "installCommand": "npm install --legacy-peer-deps"
  }
  